
@{
    ViewData["Title"] = "Chat";
}
<style>
    li:nth-child(odd) {
        background-color: #fff8dc;
    }
    /* 偶數列的背景顏色 */
    li:nth-child(even) {
        background-color: #f0f8ff;
    }
    /* reset.css */
    html {
        box-sizing: border-box;
    }

    *, *:before, *:after {
        box-sizing: inherit;
    }

    body {
        margin: 0;
        font-family: Arial, sans-serif;
    }

    /* post.css */
    .post-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .post-title {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .post-content {
        line-height: 1.8;
        font-size: 18px;
        margin-bottom: 40px;
    }

    .reply-container {
        margin-bottom: 40px;
    }

    .reply {
        background-color: #f5f5f5;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .reply-header {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .reply-content {
        margin-bottom: 10px;
        line-height: 1.6;
    }

    .reply-meta {
        text-align: right;
        font-size: 12px;
        color: #777;
    }

    .reply-form-container {
        margin-bottom: 40px;
    }

        .reply-form-container h4 {
            font-size: 20px;
            margin-bottom: 20px;
        }

        .reply-form-container form {
            display: flex;
            flex-direction: column;
        }

        .reply-form-container textarea {
            margin-bottom: 10px;
            font-size: 16px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            resize: vertical;
        }

        .reply-form-container input[type="submit"] {
            padding: 10px 20px;
            background-color: #337ab7;
            color: #fff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
        }

            .reply-form-container input[type="submit"]:hover {
                background-color: #286090;
            }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #337ab7;
        color: #fff;
        border: none;
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        font-size: 16px;
        cursor: pointer;
    }

    .truncate {
        width: 100px;
        height: 28px;
        overflow: hidden;
        text-overflow: ellipsis;
        /*    white-space: nowrap;*/
    }

    .chat-popup {
        display: none;
        position: fixed;
        bottom: 15px;
        right: 15px;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
        width: 400px;
        height: 600px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .chat-header {
        background-color: #4CAF50;
        color: white;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .chat-content {
        padding: 5px;
        height: calc(100% - 140px);
        overflow-y: scroll;
    }

    .new-chat-input {
        padding: 5px;
        display: flex;
    }

        .new-chat-input input {
            width: 100%;
            padding: 5px;
            border: 1px solid #ccc;
        }

    .open-chat-btn {
        position: fixed;
        bottom: 15px;
        right: 15px;
        background-color: #4CAF50;
        color: white;
        padding: 10px;
        border: none;
        cursor: pointer;
        font-size: 16px;
    }
</style>
<div class="container mt-5">
    <h2 class="mb-4">歡迎來到聊天室</h2>
    <div class="form-group">
        <label for="username-input">使用者名稱:</label>
        <input type="text" id="username-input" class="form-control" placeholder="輸入您的使用者名稱">
    </div>
    <div id="chatroom" class="border p-3" style="height: 500px; overflow-y: scroll;">
        <span  class="message-content"></span><span class="message-time"></span>
        <!-- 聊天內容將顯示在這裡 -->
    </div>
    <form id="chat-form" class="mt-3">
        <div class="input-group">
            <input type="text" id="new-chat-input" class="form-control" placeholder="輸入您的訊息">
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">發送</button>
            </div>
        </div>
    </form>
</div>





